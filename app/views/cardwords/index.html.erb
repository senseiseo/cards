<h1> @cardwords </h1>

<%# <%= @questions.inspect%> 

<% @cardwords.each do |cardword| %>
  <h2><%= cardword.word %>
  <h2><%= cardword.description %>
  <h2><%= cardword.response %>
  <h2><%= cardword.group %>
  <h2><%= cardword.incorrect_group %>
  <h2><%= cardword.date_change_group%>
  <h2><%= cardword.hard_word %>
 
  <h2> =============== </h2>

  <br>
  
  <%= link_to 'Show', cardword_path(cardword) %>
  <%= link_to 'Edit', edit_cardword_path(cardword) %>
  <%= link_to 'Destroy', cardword_path(cardword), data: {method: :delete, confirm: 'Точно?'} %>
<% end %>
